<%= render :partial => 'admin/comments/subnav', :locals => {:np => false, :ep => false} %>

<div id="header">
	<h1 class="skinny"><% if params[:action] == 'comments_by_post' %>Comments for post<% else %>Reader comments<% end %></h1>
	  <h2 class="fat">Gray denotes unapproved comments, click <%= image_tag "admin/t.gif", :id => "key_icon", :class => "light_check", :title => "Unapproved comment icon" %> icons to toggle.</h2><br/>
	<% if flash[:notice] %><div class="green flash"><b>Success:</b> <%= flash[:notice] %></div><% end -%>
</div>

<table class="list" cellspacing="0" cellpadding="0">
	
	<tr>
		<th class="first_col"><%= link_to 'Created', @sorter.to_link('created_at') %><%= @sorter.di('created_at') %></th>
		<th><%= link_to 'Commenter', @sorter.to_link('name') %><%= @sorter.di('name') %></th>
		<th>Excerpt</th>
		<th class="small_col"><%= link_to 'Post', @sorter.to_link('title') %><%= @sorter.di('title') %></th>
		<th class="approved_col"><%= link_to image_tag("admin/t.gif", :class => "gray_check" + (@sorter.this_col("is_approved") ? " with_light_bottom" : "")), @sorter.to_link('is_approved'), :class => 'no_bg' %><%= @sorter.di('is_approved', false) %></th>
		<th class="del_col">X</th>
	</tr>
	
	<% c = 1 -%>
	<% f = 1 -%>
	<% for comment in @comments -%>
	    <% post = comment.post -%>
		<tr id="tca<%= comment.id.to_s%>" class="<% if !comment.is_approved %>inactive <% end %><%= (c%2 == 0 ? 'alt_row ' : '') %><%= (f == 1 ? 'first_row' : '') %>">
			<td class="first_col"><%= comment.created_at.strftime('%d %b, %Y') %></td>
			<td><%= link_to (comment.name == '' ? '[Anonymous]' : comment.name), admin_comment_path(comment) %></td>
			<td><%= truncate(Post.strip_html(comment.body), 40) %></td>
			<td class="small_col"><%= link_to (post.title == '' ? '[Untitled]' : post.title), edit_admin_post(post) %></td>
			<td class="approved_col">
        <span id="yca<%= comment.id.to_s %>"<% if !comment.is_approved %> style="display: none;"<% end %>>
          <%= link_to_remote(
            image_tag(
              "admin/t.gif",
              :id => "ca#{comment.id}",
              :class => "green_check",
              :title => "This comment has been approved, click icon to unapprove"
            ),
            {
              :url => Site.full_url + '/admin/comments/approve/' + comment.id.to_s + '/toggle',
			        :loading => "Element.toggle('pca#{comment.id.to_s}'); Element.hide('yca#{comment.id.to_s}'); Element.hide('nca#{comment.id.to_s}');",
			        :complete => "Element.hide('pca#{comment.id.to_s}'); Element.hide('yca#{comment.id.to_s}'); Element.show('nca#{comment.id.to_s}'); Element.addClassName('tca#{comment.id.to_s}', 'inactive')"
			    },
			    :class => 'no_bg'
			    ) %>
        </span>
        <span id="nca<%= comment.id.to_s %>"<% if comment.is_approved %> style="display: none;"<% end %>>
          <%= link_to_remote(
            image_tag(
              "admin/t.gif",
              :id => "ca#{comment.id}",
              :class => "light_check",
              :title => "This comment has not been approved, click icon to approve"
            ),
			      {
			        :url => Site.full_url + '/admin/comments/approve/' + comment.id.to_s + '/toggle',
			        :loading => "Element.toggle('pca#{comment.id.to_s}'); Element.hide('yca#{comment.id.to_s}'); Element.hide('nca#{comment.id.to_s}');",
			        :complete => "Element.hide('pca#{comment.id.to_s}'); Element.show('yca#{comment.id.to_s}'); Element.hide('nca#{comment.id.to_s}'); Element.removeClassName('tca#{comment.id.to_s}', 'inactive')"
			    },
			    :class => 'no_bg'
			    ) %></span><!--
			  --><span id="pca<%= comment.id.to_s %>" style="display: none;"><%= image_tag "admin/indicator.gif", :alt => "Working", :border => "0", :class => "center_indicator" %></span><!--
			--></td>
		<td class="del_col"><%= link_to 'X', admin_comment_path(comment), :confirm => "You are about to delete this comment. This is permanent.\n\nAre you ABSOLUTELY sure?", :method => :delete %></td>
		</tr>
		<% c = (c == 1 ? c+1 : c = 1) -%>
		<% f = f+1 -%>
	<% end -%>
	<% unless @comments.length > 0 -%>
	<tr class="first_row"><td class="first_col" colspan="6"><span class="gray">There are no comments at this time.</span></td></tr>
	<% end -%>
	<% if @paginator %>
	<tr class="header">
		<th colspan="6">
			<div class="pagination">
				<div class="prev">
					<%= link_to '&laquo; Previous page', { :sort => params[:sort], :page => @paginator.current.previous } if @paginator.current.previous %>
				&nbsp;</div>
				<div class="next">&nbsp;
					<%= link_to 'Next page &raquo;', { :sort => params[:sort], :page => @paginator.current.next } if @paginator.current.next %>
				</div>
			</div>
		</th>
	</tr>
	<% end %>
</table>
<br/>
