<%= render :partial => 'admin/authors/subnav', :locals => {:np => false, :ep => true, :sh => false} %>

<div id="header">
	<h1>Editing author</h1>
	<h2>Required fields in <b>bold</b>.</h2><br/>
</div>

<% form_tag(admin_author_path(@author), :id => 'form', :method => :put) do -%>
  <%= render :partial => 'admin/authors/form' %>
  <div class="submit_area"><%= submit_tag 'Update this author', :class => 'submit' %> or <%= link_to 'cancel and return to author list', admin_authors_path %></div>
<% end -%>
<br/>
